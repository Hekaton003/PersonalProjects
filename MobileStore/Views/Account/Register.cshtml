                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="offset-md-2 col-md-10">
                    <input style="margin-left:10%;"type="submit" value="Register" class="btn btn-outline-dark" />
                </div>
            </div>
        }
    </section>
    
    <img src="https://xantrex.com/wp-content/uploads/2022/05/20220511_trustedtechnology2.jpg" />
    
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
